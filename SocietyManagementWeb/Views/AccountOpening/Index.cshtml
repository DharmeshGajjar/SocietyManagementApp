    //var depList = JSON.parse('@Html.Raw(Json.Serialize(Model.DepList))');

    function AddRows() {
        if (!isRecentCall) {
            var previousRow = $('#tblAccOblTran').children('tbody').children('tr:last').prev();
            if (previousRow != null) {
                var accnm = $(previousRow).children('td').eq(1).children('select').children('option:selected').text();
                var accvou = $(previousRow).children('td').eq(1).children('select').val();
                var amt = $(previousRow).children('td').eq(2).children('input').val();
                var crdrnm = $(previousRow).children('td').eq(3).children('select').children('option:selected').text();
                var crdr = $(previousRow).children('td').eq(3).children('select').val();
                var remarks = $(previousRow).children('td').eq(4).children('input').val();
                var srNo = $(previousRow).children('td').eq(0).children('input').val();
                if (accvou != null && amt != null && accvou != "" && amt != "") {


                    if (srNo == null || srNo == '' || srNo == undefined || srNo == "0") {
                        var html = $('#tblAccOblTran').children().find('tr.AddRows:first').html();

                        if ($('#tblDisplay').children('tbody').children('tr').length <= 0) {
                            $('#tblDisplay').append(`<thead>` + $('#tblAccOblTran').children('thead').html() + `</thead><tbody></tbody>`);
                            $('#tblDisplay').children('tbody').append("<tr>" + html + "</tr>");
                        }
                        else {
                            $('#tblDisplay').children('tbody').children('tr:last').after("<tr>" + html + "</tr>");
                        }
                    }

                    $('#tblAccOblTran').children('tbody').children('tr:last').removeClass('d-none')
                    $('#tblAccOblTran').children('tbody').children('tr:last').children('td').eq(1).children('label').html(accnm);
